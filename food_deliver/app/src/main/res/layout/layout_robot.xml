<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_robot"
        android:layout_width="185dp"
        android:layout_height="492dp"
        android:src="@drawable/robot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="152dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="1L-选择餐桌号"
        android:textColor="@color/plate_text_color"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_robot"
        app:layout_constraintRight_toRightOf="@id/iv_robot"
        app:layout_constraintTop_toTopOf="@id/iv_robot"
        app:layout_goneMarginTop="3dp" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="152dp"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="2L-选择餐桌号"
        android:textColor="@color/plate_text_color"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_robot"
        app:layout_constraintRight_toRightOf="@id/iv_robot"
        app:layout_constraintTop_toBottomOf="@id/tv_1"
        app:layout_goneMarginTop="3dp" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="152dp"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="3L-选择餐桌号"
        android:textColor="@color/plate_text_color"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_robot"
        app:layout_constraintRight_toRightOf="@id/iv_robot"
        app:layout_constraintTop_toBottomOf="@id/tv_2"
        app:layout_goneMarginTop="3dp" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="152dp"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="4L-选择餐桌号"
        android:textColor="@color/plate_text_color"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_robot"
        app:layout_constraintRight_toRightOf="@id/iv_robot"
        app:layout_constraintTop_toBottomOf="@id/tv_3" />
</androidx.constraintlayout.widget.ConstraintLayout>